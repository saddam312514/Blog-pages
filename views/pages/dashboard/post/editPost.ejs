<%- include('../../../partials/head.ejs') %> 



<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../../partials/sidebar.ejs') %> 
        </div>
            <div class="col-md-10 my-5">
                <div class="card card-body mx-5 py-5">
                    <form action="/post/edit/<%= post._id %> " method="POST" id="simpleform" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Enter Your Post Title</label>
                        <input type="text" name="title" id="title" 
                        class="form-control <%= error.title ? 'is-invalid' : '' %>" value="<%= post.title %> ">
                            <div class="invalid-feedback">
                                <%= error.title %> 
                            </div>
                    </div>
                    <div class="form-group">
                        <label for="tiny-mce-post-body">Enter you post body</label>
                        <textarea id="description" name="body" class="form-control <%= error.body ? 'is-invalid': '' %> "><%= post.body %></textarea>
                        <div class="invalid-feedback">
                            <%= error.body %> 
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="tags">Enter some Tags (Max 10)</label>
                        <input type="tex" name="tags" id="tags" placeholder="tag1 tag2 tag3" class="form-control" value="<%= post.tags.length > 0 ? post.tags.join('') : '' %> ">

                    </div>
                    <% if(post.thumbnail) { %> 
                        <label>Post Thumbnail</label>
                        <img src="<%= post.thumbnail %>" alt="Post Thumbnail" id="thumbnail" class="img-fluid mb-8">
                        <% } %> 
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" name="post-thumbnail" class="custom-file-input" id="inputGroupFile">
                            <label for="inputGroupFile" class="custom-file-label">Choose File</label>
                           
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Update Post">
                    <a class="btn btn-danger" href="/post/delete/<%= post._id %> ">Delete Post</a>
                    </form>
                   
                </div>

            </div>
        
    </div>
    
</div>
<%- include('../../../partials/footer.ejs') %> 
<script src="https://cdn.tiny.cloud/1/sreqbu940crbyqfn82phwkjy3m2i072xh0h6p6vsyuhhvwud/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
