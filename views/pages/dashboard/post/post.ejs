<%- include('../../../partials/head.ejs') %> 



<div class="container-fluid">

    <div class="row">
    <div class="col-md-2">
        <%- include('../../../partials/sidebar.ejs') %> 
    </div>
    <div class="col-md-10 my-5">
        <div class="card card-body">
            <h5>List of my Posts</h5>
            <div class="row">
                <% if (posts.length === 0) { %> 
                    <div class="text-center text-muted">
                        <p>There is no posts available right now</p>
                        <a href="/post/create" class="btn btn-pramary btn-sm">Create Post now</a>

                    </div>
                <% } else { %> 
                    <% for (let post of posts) { %> 
                        <div class="card col-sm-3 m-3">
                            <% if (post.thumbnail) { %>
                                <img src="<%= post.thumbnail  %> " alt="<%= post.title %> " class="card-img-top mt-3">

                            <% } %>  
                            <div class="card-body">
                                <a href="/post/edit/<%= post._id  %> " style="color: black;"><%= post.title %></a>
                            </div>
                        </div>
                        <% } %> 
                        <% } %> 
            </div>
       
        </div>
    </div>
    </div>
</div>






<%- include('../../../partials/footer.ejs') %> 


</body>    
</html>
